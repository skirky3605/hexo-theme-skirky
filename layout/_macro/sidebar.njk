{% macro render(display_toc) %}
<div class="sidebar-container">
  <aside class="sidebar">
    <div class="sidebar-inner {% if display_toc %}sidebar-nav-active sidebar-toc-active{% else %}sidebar-overview-active{% endif %}">
      <ul class="sidebar-nav">
        <li class="sidebar-nav-toc">导航</li>
        <li class="sidebar-nav-overview">关于</li>
      </ul>
      <div class="sidebar-panel-container">
        <!--noindex-->
        <div class="post-toc-wrap sidebar-panel">
          {% set toc = toc(page.content, { class: 'nav', list_number: page.toc.number, max_depth: page.toc.max_depth })
          %}
          {% set display_toc = toc.length > 1 and display_toc %}
          {%- if display_toc %}
          <div class="post-toc">{{ toc }}</div>
          {%- endif %}
        </div>
        <!--/noindex-->
        <div class="site-overview-wrap sidebar-panel">
          {{ partial('_partials/sidebar/site-overview.njk') }}
        </div>
      </div>
      <button class="back-to-top accent" title="返回顶部" type="button"
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })">
        {{ fluent_icon("ArrowUp", 16) }}
        <span>0%</span>
      </button>
    </div>
  </aside>
</div>
{% endmacro %}