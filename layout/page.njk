{% extends '_layout.njk' %}

{% block title %}{{ page.title }} | {{ title }}{% endblock %}

{% block style %}
<style>
  /* 设置页面的基本样式 */
  body {
    font-family: Arial, sans-serif;
    scrollbar-width: thin;
    scrollbar-color: #888 #333;
    background-attachment: fixed;
    background-size: cover;
  }

  /* 定义滚动条的宽度和颜色 */
  body::-webkit-scrollbar {
    width: 12px;
  }

  body::-webkit-scrollbar-track {
    background: #333;
  }

  body::-webkit-scrollbar-thumb {
    background-color: #888;
    border-radius: 8px;
  }

  /* 设置背景渐变色样式 */
  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #1b1b1b, #ff6b6b);
    background-size: 400% 400%;
    animation: gradientAnimation 10s ease infinite;
    z-index: -1;
  }

  /* 文章内容样式 */
  .article-content {
    max-width: 900px;
    margin: 30px auto 30px auto;
    padding: 20px;
    background-color: #333;
    color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    word-wrap: break-word;
    position: relative;
    background: rgba(0, 0, 0, .5);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
  }

  .article-content h1 {
    color: #ff6b6b;
    margin-bottom: 10px;
  }

  .article-content .date {
    color: #bbb;
    font-size: 14px;
    margin-bottom: 20px;
  }

  .article-content p {
    text-align: left;
    line-height: 1.6;
  }

  .article-content a.random-link {
    display: block;
    padding: 15px 20px;
    text-decoration: none;
    color: #fff;
    border-radius: 5px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    /* 初始渐变色 */
    background: linear-gradient(135deg, #007bff, #ff6b6b);
    /* 添加过渡效果 */
    transition: transform 0.3s ease;
  }

  /* 左上角关于按钮样式 */
  .about-btn {
    width: 50px;
    position: fixed;
    top: 20px;
    left: 20px;
    padding: 10px 20px;
    background-color: #333;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  }

  .about-btn a {
    text-decoration: none;
    color: #fff;
    font-size: 16px;
  }

  .about-btn a:hover {
    background-color: #444;
  }

  .footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    opacity: 1;
    color: #fff;
    text-align: center;
    padding: 10px;
  }

  .code_public {
    text-align: left;
  }

  @media (max-width: 768px) {
    body {
      overflow-x: hidden;
      overflow-y: auto;
    }

    .article-content h1 {
      font-size: 24px;
    }

    .article-content .date {
      font-size: 12px;
    }

    .article-content p {
      font-size: 16px;
    }

    /* 示例：调整较小屏幕上的内边距和外边距，以获得更好的间距 */
    .article-content {
      word-wrap: break-word;
      margin: 30px 20px;
      padding: 50px;
    }

    .article-content img {
      max-width: 100%;
    }

    /* 示例：调整“关于”按钮的大小 */
    .about-btn {
      z-index: 1;
      position: relative;
      top: 10px;
      left: 20px;
      padding: 5px 10px;
    }
  }
</style>
{% endblock %}

{% block content %}
{{ partial('_macro/post.njk', { post: page, is_page: true }) }}
{% endblock %}