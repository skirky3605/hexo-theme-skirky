$accent-control-elevation-border-brush = linear-gradient($control-stroke-color-on-accent-default 91%, $control-stroke-color-on-accent-secondary);

control-elevation-border-brush($color) {
  linear-gradient(blend($control-stroke-color-default, $color) 91%, blend($control-stroke-color-secondary, $color))
}
circle-elevation-border-brush($color) {
  linear-gradient(blend($control-stroke-color-default, $color) 50%, blend($control-stroke-color-secondary, $color) 95%)
}
