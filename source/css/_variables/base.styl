  linear-gradient(blend($control-stroke-color-on-accent-default, $color) 91%, blend($control-stroke-color-on-accent-secondary, $color))
}

control-elevation-border($background, $border-width) {
  border-image-border($background, control-elevation-border-brush($background), $border-width)
}
circle-elevation-border($background, $border-width) {
  border-image-border($background, circle-elevation-border-brush($background), $border-width)
}
accent-control-elevation-border($background, $border-width) {
  border-image-border($background, accent-control-elevation-border-brush($background), $border-width)
}

$text-control-elevation-border-brush = linear-gradient($control-stroke-color-default 100%, $control-strong-stroke-color-default);
