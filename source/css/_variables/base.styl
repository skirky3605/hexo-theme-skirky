text-control-elevation-border-brush($color) {
  linear-gradient(blend($color, $control-stroke-color-default) 100%, blend($color, $control-strong-stroke-color-default))
}
text-control-elevation-focused-border-brush($color) {
  linear-gradient(blend($color, $control-stroke-color-default) 97%, blend($color, $system-accent-color-dark1) 97%)
}

text-control-elevation-border($background, $border-width) {
  border-image-border($background, text-control-elevation-border-brush($background), $border-width)
}
text-control-elevation-border-focused($background, $border-width) {
  border-image-border($background, text-control-elevation-border-focused-brush($background), $border-width)
}

