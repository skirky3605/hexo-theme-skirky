@import 'header';
@import 'sidebar';
@import 'footer';

.main-grid {
  display: flex;

  .main-inner {
    float: left;
    padding: 16px;
    width: calc(100% - 240px);
  }

  .column {
    float: left;
    width: 240px;
  }

  +desktop-large() {
    padding: 32px 80px;
  }

  +tablet-desktop() {
    padding: 32px 56px;
  }

  +desktop-large() {
    width: 1160px;
    margin: 0 auto;
  }

  +desktop-largest() {
    width: 75%;
  }
}