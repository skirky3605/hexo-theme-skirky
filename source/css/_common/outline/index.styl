@import 'header';
@import 'sidebar';
@import 'footer';

.main-grid {
  display: flex;

  .main-inner {
    float: left;
    padding: 16px;
    width: calc(100% - 240px);
  }

  .column {
    float: right;
    width: 240px;
    padding: 16px 16px 16px 0;
  }

  +desktop-large() {
    width: 1160px;
    margin: 0 auto;
    padding: 32px 80px;
  }

  +tablet-desktop() {
    padding: 32px 56px;
  }

  +desktop-largest() {
    width: 75%;
  }

  +mobile() {
    .main-inner {
      float: none;
      width: auto;
    }

    .column {
      position: absolute;
      float: left;
      width: 0;
      opacity: 0;
      overflow: hidden;
      pointer-events: none;
      visibility: hidden;
    }
  }
}