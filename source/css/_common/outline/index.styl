@import 'header';
@import 'sidebar';
@import 'footer';

.main-grid {
  display: flex;

  .main-inner {
    float: left;
    padding: 16px;
    width: calc(100% - 240px);
  }

  .column {
    float: right;
    width: 240px;
    pointer-events: none;
    padding: 16px 16px 16px 0;
  }

  +mobile() {
    .main-inner {
      float: none;
      width: calc(100% - 32px);
    }

    .column {
      position: fixed;
      left: -272px;
      top: 48px;
      right: 0;
      bottom: 40px;
      max-width: calc(100% - 32px);
      padding: 16px 16px 54px 16px;
      overflow-y: auto;
      transition: left .167s ease-in-out;

      .sidebar-active & {
        left: 0;
      }
    }
  }

  +tablet-desktop() {
    padding: 32px 56px;
  }

  +desktop-large() {
    max-width: 1200px;
    margin: 0 auto;
    padding: 32px 80px;
  }

  +desktop-largest() {
    width: 75%;
    max-width: none;
  }
}