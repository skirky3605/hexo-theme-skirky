@import 'sidebar-nav';
@import 'sidebar-toc';
@import 'sidebar-author';
@import 'site-state';
@import 'sidebar-copyright';
@import 'related-posts';

.sidebar-container {
  position: sticky;
  width: 240px;
  max-width: 100%;
  top: 56px;

  .sidebar-inner {
    padding: 0 16px;
    background: $card-background-fill-color-default;
    border: 1px solid $control-stroke-color-default;
    border-radius: $overlay-corner-radius;

    +dark() {
      background: $card-background-fill-color-default-dark;
      border: 1px solid $control-stroke-color-default-dark;
    }

    +supports-light-dark() {
      background: light-dark($card-background-fill-color-default, $card-background-fill-color-default-dark);
      border: 1px solid light-dark($control-stroke-color-default, $control-stroke-color-default-dark);
    }
  }

  +mobile() {
    position: static;

    .sidebar-inner {
      backdrop-filter: blur(40px);
    }
  }
}