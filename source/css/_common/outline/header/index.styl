@import 'menu';

.header-container {
  height: 48px;

  .header-inner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
    display: flex;
    justify-content: space-between;
    background: $card-background-fill-color-default;
    backdrop-filter: blur(40px);
    padding: 0 4px;

    +dark() {
      background: $card-background-fill-color-default-dark;
    }

    .header-left {
      float: left;
    }

    .header-right {
      float: right;
    }
  }
}

.menu-item-search {
  fill: currentColor;

  a {
    svg {
      margin-bottom: -4px;
    }
  }
}