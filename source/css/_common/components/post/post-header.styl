.posts-expand .post-header {
  margin-bottom: 20px;
  text-align: center;

  +desktop-large() {
    margin-bottom: 40px;
  }

  +mobile-small() {
    margin-bottom: 10px;
  }
}

.posts-expand .post-title {
  margin: initial;
  text-align: center;
  word-wrap();
}

.post-meta {
  margin-top: 4px;
  text-align: center;
  font-size: $caption-text-block-font-size;
}