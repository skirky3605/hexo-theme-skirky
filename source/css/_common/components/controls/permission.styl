permission {
  width: auto;
  height: auto;
  padding-bottom: 6px;
  padding-right: 11px;
  padding-top: 6px;
  padding-left: 11px;
  color: rgb(blend($button-foreground, $solid-background-fill-color-base));
  border-radius: $control-corner-radius;
  background-clip: padding-box;
  background-color: rgb(blend($button-background, $solid-background-fill-color-base));
  border-left: $button-border-theme-thickness solid rgb(blend($control-stroke-color-default, $solid-background-fill-color-base));
  border-top: $button-border-theme-thickness solid rgb(blend($control-stroke-color-default, $solid-background-fill-color-base));
  border-right: $button-border-theme-thickness solid rgb(blend($control-stroke-color-default, $solid-background-fill-color-base));
  border-bottom: $button-border-theme-thickness solid rgb(blend($control-stroke-color-secondary, $solid-background-fill-color-base));

  &:not(:invalid):hover {
    color: rgb(blend($button-foreground-pointer-over, blend($button-background-pointer-over, $solid-background-fill-color-base)));
    background-color: rgb(blend($button-background-pointer-over, $solid-background-fill-color-base));
  }

  &:not(:invalid):active {
    color: rgb(blend($button-foreground-pressed, blend($button-background-pressed, $solid-background-fill-color-base)));
    background-color: rgb(blend($button-background-pressed, $solid-background-fill-color-base));
    border: $button-border-theme-thickness solid rgb(blend($button-border-brush-pressed, $solid-background-fill-color-base));
  }

  &:invalid {
    color: rgb(blend($button-foreground-disabled, blend($button-background-disabled, $solid-background-fill-color-base)));
    background-color: rgb(blend($button-background-disabled, $solid-background-fill-color-base));
    border: $button-border-theme-thickness solid rgb(blend($button-border-brush-disabled, $solid-background-fill-color-base));
  }

  +dark() {
    color: rgb(blend($button-foreground-dark, blend($button-background-dark, $solid-background-fill-color-base-dark)));
    background-color: rgb(blend($button-background-dark, $solid-background-fill-color-base-dark));
    border-left: $button-border-theme-thickness solid rgb(blend($control-stroke-color-default-dark, $solid-background-fill-color-base-dark));
    border-top: $button-border-theme-thickness solid rgb(blend($control-stroke-color-default-dark, $solid-background-fill-color-base-dark));
    border-right: $button-border-theme-thickness solid rgb(blend($control-stroke-color-default-dark, $solid-background-fill-color-base-dark));
    border-bottom: $button-border-theme-thickness solid rgb(blend($control-stroke-color-secondary-dark, $solid-background-fill-color-base-dark));

    &:not(:invalid):hover {
      color: rgb(blend($button-foreground-pointer-over-dark, blend($button-background-pointer-over-dark, $solid-background-fill-color-base-dark)));
      background-color: rgb(blend($button-background-pointer-over-dark, $solid-background-fill-color-base-dark));
    }

    &:not(:invalid):active {
      color: rgb(blend($button-foreground-pressed-dark, blend($button-background-pressed-dark, $solid-background-fill-color-base-dark)));
      background-color: rgb(blend($button-background-pressed-dark, $solid-background-fill-color-base-dark));
      border: $button-border-theme-thickness solid rgb(blend($button-border-brush-pressed-dark, $solid-background-fill-color-base-dark));
    }

    &:invalid {
      color: rgb(blend($button-foreground-disabled-dark, blend($button-background-disabled-dark, $solid-background-fill-color-base-dark)));
      background-color: rgb(blend($button-background-disabled-dark, $solid-background-fill-color-base-dark));
      border: $button-border-theme-thickness solid rgb(blend($button-border-brush-disabled-dark, $solid-background-fill-color-base-dark));
    }
  }

  +supports-light-dark() {
    color: light-dark(rgb(blend($button-foreground, blend($button-background, $solid-background-fill-color-base))), rgb(blend($button-foreground-dark, blend($button-background-dark, $solid-background-fill-color-base-dark))));
    background-color: light-dark(rgb(blend($button-background, $solid-background-fill-color-base)), rgb(blend($button-background-dark, $solid-background-fill-color-base-dark)));
    border-left: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-default, $solid-background-fill-color-base)), rgb(blend($control-stroke-color-default-dark, $solid-background-fill-color-base-dark)));
    border-top: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-default, $solid-background-fill-color-base)), rgb(blend($control-stroke-color-default-dark, $solid-background-fill-color-base-dark)));
    border-right: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-default, $solid-background-fill-color-base)), rgb(blend($control-stroke-color-default-dark, $solid-background-fill-color-base-dark)));
    border-bottom: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-secondary, $solid-background-fill-color-base)), rgb(blend($control-stroke-color-secondary-dark, $solid-background-fill-color-base-dark)));

    &:not(:invalid):hover {
      color: light-dark(rgb(blend($button-foreground-pointer-over, blend($button-background-pointer-over, $solid-background-fill-color-base))), rgb(blend($button-foreground-pointer-over-dark, blend($button-background-pointer-over-dark, $solid-background-fill-color-base-dark))));
      background-color: light-dark(rgb(blend($button-background-pointer-over, $solid-background-fill-color-base)), rgb(blend($button-background-pointer-over-dark, $solid-background-fill-color-base-dark)));
    }

    &:not(:invalid):active {
      color: light-dark(rgb(blend($button-foreground-pressed, blend($button-background-pressed, $solid-background-fill-color-base))), rgb(blend($button-foreground-pressed-dark, blend($button-background-pressed-dark, $solid-background-fill-color-base-dark))));
      background-color: light-dark(rgb(blend($button-background-pressed, $solid-background-fill-color-base)), rgb(blend($button-background-pressed-dark, $solid-background-fill-color-base-dark)));
      border: $button-border-theme-thickness solid light-dark(rgb(blend($button-border-brush-pressed, $solid-background-fill-color-base)), rgb(blend($button-border-brush-pressed-dark, $solid-background-fill-color-base-dark)));
    }

    &:invalid {
      color: light-dark(rgb(blend($button-foreground-disabled, blend($button-background-disabled, $solid-background-fill-color-base))), rgb(blend($button-foreground-disabled-dark, blend($button-background-disabled-dark, $solid-background-fill-color-base-dark))));
      background-color: light-dark(rgb(blend($button-background-disabled, $solid-background-fill-color-base)), rgb(blend($button-background-disabled-dark, $solid-background-fill-color-base-dark)));
      border: $button-border-theme-thickness solid light-dark(rgb(blend($button-border-brush-disabled, $solid-background-fill-color-base)), rgb(blend($button-border-brush-disabled-dark, $solid-background-fill-color-base-dark)));
    }
  }

  &:granted {
    color: rgb(blend($accent-button-foreground, blend($accent-button-background, $solid-background-fill-color-base)));
    background: rgb(blend($accent-button-background, $solid-background-fill-color-base));
    border-left: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-default, blend($accent-button-background, $solid-background-fill-color-base)));
    border-top: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-default, blend($accent-button-background, $solid-background-fill-color-base)));
    border-right: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-default, blend($accent-button-background, $solid-background-fill-color-base)));
    border-bottom: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-secondary, blend($accent-button-background, $solid-background-fill-color-base)));

    &:not(:invalid):hover {
      color: rgb(blend($accent-button-foreground-pointer-over, blend($accent-button-background-pointer-over, $solid-background-fill-color-base)));
      background: rgb(blend($accent-button-background-pointer-over, $solid-background-fill-color-base));
    }

    &:not(:invalid):active {
      color: rgb(blend($accent-button-foreground-pressed, blend($accent-button-background-pressed, $solid-background-fill-color-base)));
      background: rgb(blend($accent-button-background-pressed, $solid-background-fill-color-base));
      border: $button-border-theme-thickness solid rgb(blend($accent-button-border-brush-pressed, blend($accent-button-background-pressed, $solid-background-fill-color-base)));
    }

    &:invalid {
      color: rgb(blend($accent-button-foreground-disabled, blend($accent-button-background-disabled, $solid-background-fill-color-base)));
      background: rgb(blend($accent-button-background-disabled, $solid-background-fill-color-base));
      border: $button-border-theme-thickness solid rgb(blend($accent-button-border-brush-disabled, blend($accent-button-background-disabled, $solid-background-fill-color-base)));
    }

    +dark() {
      color: rgb(blend($accent-button-foreground-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark)));
      background: rgb(blend($accent-button-background-dark, $solid-background-fill-color-base-dark));
      border-left: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-default-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark)));
      border-top: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-default-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark)));
      border-right: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-default-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark)));
      border-bottom: $button-border-theme-thickness solid rgb(blend($control-stroke-color-on-accent-secondary-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark)));

      &:not(:invalid):hover {
        color: rgb(blend($accent-button-foreground-pointer-over-dark, blend($accent-button-background-pointer-over-dark, $solid-background-fill-color-base-dark)));
        background: rgb(blend($accent-button-background-pointer-over-dark, $solid-background-fill-color-base-dark));
      }

      &:not(:invalid):active {
        color: rgb(blend($accent-button-foreground-pressed-dark, blend($accent-button-background-pressed-dark, $solid-background-fill-color-base-dark)));
        background: rgb(blend($accent-button-background-pressed-dark, $solid-background-fill-color-base-dark));
        border: $button-border-theme-thickness solid rgb(blend($accent-button-border-brush-pressed-dark, blend($accent-button-background-pressed-dark, $solid-background-fill-color-base-dark)));
      }

      &:invalid {
        color: rgb(blend($accent-button-foreground-disabled-dark, blend($accent-button-background-disabled-dark, $solid-background-fill-color-base-dark)));
        background: rgb(blend($accent-button-background-disabled-dark, $solid-background-fill-color-base-dark));
        border: $button-border-theme-thickness solid rgb(blend($accent-button-border-brush-disabled-dark, blend($accent-button-background-disabled-dark, $solid-background-fill-color-base-dark)));
      }
    }

    +supports-light-dark() {
      color: light-dark(rgb(blend($accent-button-foreground, blend($accent-button-background, $solid-background-fill-color-base))), rgb(blend($accent-button-foreground-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark))));
      background-color: light-dark(rgb(blend($accent-button-background, $solid-background-fill-color-base)), rgb(blend($accent-button-background-dark, $solid-background-fill-color-base-dark)));
      border-left: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-on-accent-default, blend($accent-button-background, $solid-background-fill-color-base))), rgb(blend($control-stroke-color-on-accent-default-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark))));
      border-top: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-on-accent-default, blend($accent-button-background, $solid-background-fill-color-base))), rgb(blend($control-stroke-color-on-accent-default-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark))));
      border-right: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-on-accent-default, blend($accent-button-background, $solid-background-fill-color-base))), rgb(blend($control-stroke-color-on-accent-default-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark))));
      border-bottom: $button-border-theme-thickness solid light-dark(rgb(blend($control-stroke-color-on-accent-secondary, blend($accent-button-background, $solid-background-fill-color-base))), rgb(blend($control-stroke-color-on-accent-secondary-dark, blend($accent-button-background-dark, $solid-background-fill-color-base-dark))));

      &:not(:invalid):hover {
        color: light-dark(rgb(blend($accent-button-foreground-pointer-over, blend($accent-button-background-pointer-over, $solid-background-fill-color-base))), rgb(blend($accent-button-foreground-pointer-over-dark, blend($accent-button-background-pointer-over-dark, $solid-background-fill-color-base-dark))));
        background-color: light-dark(rgb(blend($accent-button-background-pointer-over, $solid-background-fill-color-base)), rgb(blend($accent-button-background-pointer-over-dark, $solid-background-fill-color-base-dark)));
      }

      &:not(:invalid):active {
        color: light-dark(rgb(blend($accent-button-foreground-pressed, blend($accent-button-background-pressed, $solid-background-fill-color-base))), rgb(blend($accent-button-foreground-pressed-dark, blend($accent-button-background-pressed-dark, $solid-background-fill-color-base-dark))));
        background-color: light-dark(rgb(blend($accent-button-background-pressed, $solid-background-fill-color-base)), rgb(blend($accent-button-background-pressed-dark, $solid-background-fill-color-base-dark)));
        border: $button-border-theme-thickness solid light-dark(rgb(blend($accent-button-border-brush-pressed, $solid-background-fill-color-base)), rgb(blend($accent-button-border-brush-pressed-dark, $solid-background-fill-color-base-dark)));
      }

      &:invalid {
        color: light-dark(rgb(blend($accent-button-foreground-disabled, blend($accent-button-background-disabled, $solid-background-fill-color-base))), rgb(blend($accent-button-foreground-disabled-dark, blend($accent-button-background-disabled-dark, $solid-background-fill-color-base-dark))));
        background-color: light-dark(rgb(blend($accent-button-background-disabled, $solid-background-fill-color-base)), rgb(blend($accent-button-background-disabled-dark, $solid-background-fill-color-base-dark)));
        border: $button-border-theme-thickness solid light-dark(rgb(blend($accent-button-border-brush-disabled, $solid-background-fill-color-base)), rgb(blend($accent-button-border-brush-disabled-dark, $solid-background-fill-color-base-dark)));
      }
    }
  }
}