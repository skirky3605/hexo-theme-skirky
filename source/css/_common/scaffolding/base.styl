@media (prefers-reduced-motion: no-preference) {
  :root {
    scroll-behavior: smooth;
  }
}

html {
  font-family: $body-font;
}

body {
  margin: 0;
  height: 100%;
  font-size: $body-text-block-font-size;
  line-height: 1.429;
  font-weight: 400;
  font-family: $body-font;
  color: $text-fill-color-primary;
  background: alpha($solid-background-fill-color-base, 0.5);
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

  +dark() {
    color: $text-fill-color-primary-dark;
    background: $solid-background-fill-color-base-dark;
  }

  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-size: 400% 400%;
    background-image: linear-gradient(45deg, #ff9a9a, #a8e6cf, $solid-background-fill-color-base, #ff9a9a);
    background-position: 0%;
    animation: gradient-animation 10s ease infinite;

    +dark() {
      background-image: linear-gradient(45deg, #ff6b6b, #4ecdc4, $solid-background-fill-color-base-dark, #ff6b6b);
    }

    .background-hover {
      width: 100%;
      height: 100%;
      background: alpha($solid-background-fill-color-base, 0.5);

      +dark() {
        background: alpha($solid-background-fill-color-base-dark, 0.8);
      }
    }
  }
}

.header-container {
  height: 48px;

  .header-inner {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
    background: $card-background-fill-color-default;
    backdrop-filter: blur(40px);
    padding: 0 4px;

    +dark() {
      background: $card-background-fill-color-default-dark;
    }

    a {
      height: 48px;
      padding: 0 12px;
      display: inline-flex;
      justify-content: center;
      align-items: center;
    }
  }
}

.main-inner {
  padding: 16px;

  +desktop-large() {
    padding: 32px 80px;
  }

  +tablet-desktop() {
    padding: 32px 56px;
  }
}

.footer-container {
  height: 40px;

  .footer-inner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: $card-background-fill-color-default;
    align-items: center;
    padding: 10px 10px;
    backdrop-filter: blur(40px);

    .left {
      float: left;
    }

    .right {
      float: right;
    }

    a {
      color: $text-fill-color-primary;
      text-decoration: none;

      &:focus {
        outline: 1px dashed;
        outline-offset: 3px;
      }
    }

    +dark() {
      background: $card-background-fill-color-default-dark;
      color: $text-fill-color-primary-dark;

      a {
        color: $text-fill-color-primary-dark;
      }
    }

    display: flex;
    z-index: 10;
    flex-direction: row;
    font-weight: normal;
    font-size: $caption-text-block-font-size;
  }
}

a {
  color: $accent-text-fill-color-primary;
  text-decoration: none;

  &:hover {
    color: $accent-text-fill-color-secondary;
  }

  &:active {
    color: $accent-text-fill-color-tertiary;
  }

  &:not([href]):not([class]),
  &:not([href]):not([class]):hover {
    color: $accent-text-fill-color-disabled;
  }

  +dark() {
    color: $accent-text-fill-color-primary-dark;

    &:hover {
      color: $accent-text-fill-color-secondary-dark;
    }

    &:active {
      color: $accent-text-fill-color-tertiary-dark;
    }

    &:not([href]):not([class]),
    &:not([href]):not([class]):hover {
      color: $accent-text-fill-color-disabled-dark;
    }
  }
}

embed,
iframe,
img,
video {
  display: block;
  max-width: 100%;
}

a.random-link {
  display: block;
  padding: 15px 20px;
  text-decoration: none;
  text-align: center;
  color: $text-fill-color-primary-dark;
  border-radius: $control-corner-radius;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  /* 初始渐变色 */
  background: linear-gradient(135deg, #007bff, #ff6b6b);
  /* 添加过渡效果 */
  transition: transform 0.3s ease;

  &:hover {
    transform: scale(1.01);
  }
}